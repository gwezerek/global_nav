mixin css(filename)
  if bog
    link(rel='stylesheet', href='#{STATIC_URL}/css/#{filename}')
  else
    link(rel='stylesheet', href='css/#{filename}?v=#{cache_bust["public/css/" + filename]}')

mixin js(filename)
  if bog
    script(src='#{STATIC_URL}/js/#{filename}', defer)
  else
    script(src='js/#{filename}?v=#{cache_bust["public/js/" + filename]}', defer)

mixin img(filename, alt)
    if bog
        img(src='#{STATIC_URL}/images/#{filename}' alt='#{alt}')
    else
        img(src='images/#{filename}?v=#{cache_bust["public/images/" + filename]}' alt='#{alt}')
